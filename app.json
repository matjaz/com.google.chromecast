{
	"id": "com.google.chromecast",
	"version": "0.11.1",
	"compatibility": "0.x || 1.x",
	"category": "video",
	"name": {
		"en": "Google Chromecast"
	},
	"description": {
		"en": "Connect Homey with your Google Chromecast to send video to your TV"
	},
	"author": {
		"name": "Emile Nijssen",
		"website": "http://www.emilenijssen.nl"
	},
	"contributors": {
		"developers": [
			{
				"name": "Matjaž Lipuš",
				"website": "http://matjaz.info",
				"email": "matjazl@gmail.com"
			}
		]
	},
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"dependencies": {
		"chromecast-api": "*"
	},
	"drivers": [
		{
			"id": "chromecast",
			"name": {
				"en": "Chromecast"
			},
			"images": {
				"large": "./drivers/chromecast/assets/images/large.jpg",
				"small": "./drivers/chromecast/assets/images/small.jpg"
			},
			"class": "videoplayer",
			"capabilities": [ "play", "pause", "stop" ],
			"pair": [
				{
					"id": "list_chromecasts",
					"template": "list_devices",
					"navigation": {
						"next": "add_chromecasts"
					}
				},
				{
					"id": "add_chromecasts",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"triggers": [
			{
				"id": "chromecastStatusChanged",
				"title": {
					"en": "Chromecast status changed"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					}
				],
				"tokens": [
					{
						"name": "status",
						"title": {
							"en": "Status"
						}
					}
				]
			}
		],
		"actions": [
			{
				"id": "castYouTube",
				"title": {
					"en": "Cast a YouTube video",
					"nl": "Cast een YouTube video"
				},
				"fluidArgs": true,
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "youtube_id",
						"type": "autocomplete",
						"placeholder": {
							"en": "Find a YouTube video..."
						}
					}
				]
			},
			{
				"id": "stopVideo",
				"title": {
					"en": "Stop casting"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					}
				]
			},
			{
				"id": "pauseVideo",
				"title": {
					"en": "Pause"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					}
				]
			},
			{
				"id": "unpauseVideo",
				"title": {
					"en": "Unpause"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					}
				]
			},
			{
				"id": "seekVideo",
				"title": {
					"en": "Seek by"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "time",
						"type": "number",
						"min": 0,
						"placeholder": {
							"en": "seconds"
						}
					}
				]
			},
			{
				"id": "seekToVideo",
				"title": {
					"en": "Seek to"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "time",
						"type": "text",
						"placeholder": {
							"en": "1:15 or seconds from start"
						}
					}
				]
			},
			{
				"id": "setVolumeVideo",
				"title": {
					"en": "Set volume"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "level",
						"type": "number",
						"min": 0,
						"max": 100,
						"placeholder": {
							"en": "Volume level %"
						}
					}
				]
			},
			{
				"id": "muteVideo",
				"title": {
					"en": "Mute"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					}
				]
			},
			{
				"id": "unmuteVideo",
				"title": {
					"en": "Unmute"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					}
				]
			},
			{
				"id": "castVideo",
				"title": {
					"en": "Cast a video URL",
					"nl": "Cast een video URL"
				},
				"fluidArgs": true,
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "url",
						"type": "text",
						"placeholder": {
							"en": "URL"
						}
					}
				]
			}
		]
	}
}
